<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %-5p [%c] %m%n"/>
        </layout>
    </appender>
    <appender name="FILE_LOG" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${VOGE_HOME}/logs/fsm/hype-file.log" />
        <param name="Append" value="true" />	    	
		<param name="BufferedIO" value="false"/>
        <param name="BufferSize" value="8192"/>
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-d{yyyy-MM-dd HH:mm:ss}] [%r] [%p] [%c] - %m%n"/>
        </layout>	    
	</appender>
	
	<appender name="DB_LOG" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${VOGE_HOME}/logs/fsm/db.log" />
        <param name="Append" value="true" />	    	
		<param name="BufferedIO" value="false"/>
        <param name="BufferSize" value="8192"/>
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-d{yyyy-MM-dd HH:mm:ss}] [%r] [%p] [%c] - %m%n"/>
        </layout>	    
	</appender>
	
	<appender name="ACTOR_LOG" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${VOGE_HOME}/logs/fsm/actor.log" />
        <param name="Append" value="true" />	    	
		<param name="BufferedIO" value="false"/>
        <param name="BufferSize" value="8192"/>
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-d{yyyy-MM-dd HH:mm:ss}] [%r] [%p] [%c] - %m%n"/>
        </layout>	    
	</appender>
	
	<appender name="SERVICE_LOG" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${VOGE_HOME}/logs/fsm/service.log" />
        <param name="Append" value="true" />	    	
		<param name="BufferedIO" value="false"/>
        <param name="BufferSize" value="8192"/>
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-d{yyyy-MM-dd HH:mm:ss}] [%r] [%p] [%c] - %m%n"/>
        </layout>	    
	</appender>
	<appender name="SYS_LOG" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${VOGE_HOME}/logs/fsm/sys.log" />
        <param name="Append" value="true" />	    	
		<param name="BufferedIO" value="false"/>
        <param name="BufferSize" value="8192"/>
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-d{yyyy-MM-dd HH:mm:ss}] [%r] [%p] [%c] - %m%n"/>
        </layout>	    
	</appender>
	
	<appender name="HYPE_LOG" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${VOGE_HOME}/logs/fsm/hype.log" />
        <param name="Append" value="true" />	    	
		<param name="BufferedIO" value="false"/>
        <param name="BufferSize" value="8192"/>
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-d{yyyy-MM-dd HH:mm:ss}] [%r] [%p] [%c] - %m%n"/>
        </layout>	    
	</appender>
	
	<appender name="CACHE_LOG" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${VOGE_HOME}/logs/fsm/cache.log" />
        <param name="Append" value="true" />	    	
		<param name="BufferedIO" value="false"/>
        <param name="BufferSize" value="8192"/>
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-d{yyyy-MM-dd HH:mm:ss}] [%r] [%p] [%c] - %m%n"/>
        </layout>	    
	</appender>
	
	<appender name="VOGE_LOG" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${VOGE_HOME}/logs/voge.log" />
        <param name="Append" value="true" />	    	
		<param name="BufferedIO" value="false"/>
        <param name="BufferSize" value="8192"/>
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-d{yyyy-MM-dd HH:mm:ss}] [%r] [%p] [%c] - %m%n"/>
        </layout>	    
	</appender>
	
	<category name="cn.com.voge">
		<priority value="INFO"/>
		<appender-ref ref="VOGE_LOG"/>
	</category>
	
	<category name="cn.com.voge.fsm">
		<priority value="INFO"/>
		<appender-ref ref="HYPE_LOG"/>
	</category>
	
	<category name="cn.com.voge.system">
		<priority value="INFO"/>
		<appender-ref ref="SYS_LOG"/>
	</category>
	
	<category name="cn.com.voge.actor">
		<priority value="INFO"/>
		<appender-ref ref="ACTOR_LOG"/>
	</category>
	
	<category name="cn.com.voge.service">
		<priority value="INFO"/>
		<appender-ref ref="SERVICE_LOG"/>
	</category>
	
	<category name="com.voyageci.core.ibatis">
		<priority value="INFO"/>
		<appender-ref ref="DB_LOG"/>
	</category>
	
	<category name="org.springframework">
		<priority value="INFO"/>
		<appender-ref ref="FILE_LOG"/>
	</category>
	
    <root>
        <level value="INFO"/>
        <appender-ref ref="STDOUT"/>
    </root>
</log4j:configuration>