		values.put("mobile", mobile);
		values.put("qq", qq);
		values.put("password",GeneralUtils.MD5(password));
		Map result = null;
		try {
			result = adminService.saveAdmin(values);
		} catch (Exception e) {
			System.err.println(e.getMessage());
		}
		if (result == null) {
			result = getReturnMap("保存失败", Constant.RESULT_CODE_ERROR);
		}else{
