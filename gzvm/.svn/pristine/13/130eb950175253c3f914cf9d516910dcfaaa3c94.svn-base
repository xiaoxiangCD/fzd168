.flex {
	overflow: hidden;
	display: flex;
	display: -webkit-box;
	/* display : -moz-flex;
	display : -o-flex;
	display : -ms-flex; */
	padding: .5em 1em;
}

.flex_item_s {
	padding: 0 .5em;
	text-align: center;
	-webkit-box-align: center;
	flex: 1;
	-webkit-box-flex: 1;
	-moz-box-flex: 1;
	-ms-flex: 1;
}

.flex_item_m {
	padding: 0 .5em;
	text-align: center;
	-webkit-box-align: center;
	flex: 2;
	-webkit-box-flex: 2;
	-moz-box-flex: 2;
	-ms-flex: 2;
}

.flex_item_l {
	padding: 0 .5em;
	text-align: center;
	-webkit-box-align: center;
	flex: 3;
	-webkit-box-flex: 3;
	-moz-box-flex: 3;
	-ms-flex: 3;
}

.flex_item_xl {
	padding: 0 .5em;
	text-align: center;
	-webkit-box-align: center;
	flex: 4;
	-webkit-box-flex: 4;
	-moz-box-flex: 4;
	-ms-flex: 4;
}