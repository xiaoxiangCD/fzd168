/*控制全局比例大小媒体对象*/
@media ( max-width : 320px) {
	html {
		font-size: 15px;
	}
	body {
		font-size: 8px;
		padding: 0;
		margin: 0;
		font-family: tahoma, arial, "Hiragino Sans GB", "Microsoft Yahei", 宋体,
			sans-serif;
		overflow-x: hidden;
		background-color: #F5F4F9;
		padding-bottom: 4.4em;
	}
}

@media ( min-width : 320px) and (max-width: 400px) {
	html {
		font-size: 20px;
	}
	body {
		font-size: 10px;
		padding: 0;
		margin: 0;
		font-family: tahoma, arial, "Hiragino Sans GB", "Microsoft Yahei", 宋体,
			sans-serif;
		overflow-x: hidden;
		background-color: #F5F4F9;
		padding-bottom: 4.4em;
	}
}

