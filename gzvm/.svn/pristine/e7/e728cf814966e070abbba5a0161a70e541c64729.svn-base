.space_top {
	margin-top:30px;
}
.space_bottom {
	margin-bottom:20px;
}
.align_l{
	text-align:left;
}
.align_r{
	text-align:right;
}
.align_c{
	text-align:center;
}
.w{
	width:100%;
}
.h{
	height:100%;
}
.required{
	color:#f00;
}
.ps{
	color:#ccc;
}
.item{
	height:34px;
}

/*标题*/
.title{
	border-bottom:solid 2px #999;
	position:relative;
}
.title .title_cn,.title .title_en{
	display:inline-block;
}
.title .title_cn{
	font-weight:bold;
	font-size:18px;
	color:#ff9966;
	padding:0 20px 10px 0;
}
.title .title_en{
	font-weight:bold;
	font-size:18px;
	color:#999;
}
.title .more{
	position:absolute;
	right:10px;
	bottom:10px;
}
/* 清楚浮动 */

.clear{
	clear:both;
}

/* 表单左边文字 */
.infor .col-md-1{
	line-height:34px ;
	padding:0px;
	margin-left:0 10px 0 12px;
}

/* 温馨提示 */
.pop_panel{
	width:720px;
	height:400px;
	position:absolute;
	top:50%;
	left:50%;
	margin-left:-360px;
	margin-top:-200px;
	background-color:#fff;
	border:solid 1px #ccc;
	 box-shadow: 5px 3px 10px rgba(0, 0, 0, 0.3) ;
	 display:none;
}
.pop_top{
	height:40px;
	background-color:#666;
}
.pop_top p{
	margin-left:20px;
	height:40px;
	line-height:40px;
	color:#fff;
}
.pop_exit{
	position:absolute;
	right:10px;
	top:14px;
	cursor:pointer;
}
.pop_exit img{
	width:12px;
	height:12px;
}
.pop_content{
	margin-top:80px;
	padding:0 100px;
}
.pop_hint{
	display:inline-block;
	float:left;
}
.pop_hint_l{
	width:30%;
}
.pop_hint_r{
	width:70%;
}
.hint_img{
	display:inline-block;
}
.pop_btn{
	width:320px;
}
.success_hint {
	font-weight:bold;
	font-size:20px;
}