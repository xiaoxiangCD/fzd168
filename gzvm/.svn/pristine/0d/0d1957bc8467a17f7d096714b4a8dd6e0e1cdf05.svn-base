package cn.com.voge.gzvm.service;

import java.util.Map;

import cn.com.voge.gzvm.Constant;
import cn.com.voge.gzvm.manager.AdminManager;

import com.google.gxp.com.google.common.collect.Maps;
import com.voyageci.core.service.BaseService;

/** 
 * @author lianzw 
 * @version 创建时间：2017年5月4日 上午11:23:29 
 * 类说明 预留的公共类，写公用方法
 */
@SuppressWarnings({"rawtypes","unchecked"})
public class GzvmSercice  extends BaseService{
	
	protected AdminManager adminManager;

	/** 初始化分页参数
	 * @author lianzw
	 * @param start
	 * @param pageSize
	 */
	public void initPagingParams(Integer start,Integer pageSize){
		if((start == null)||(start<0)){
			start = 0;
		}
		if((pageSize == null)||(pageSize<0)){
			pageSize = Constant.ROWS_MAX;
		}
	}
	
	/** 初始化查询参数
	 * @author lianzw
	 * @param criteria
	 */
	public void initCriteria(Map criteria){
		if (criteria == null) {
			criteria = Maps.newHashMap();
		}
		criteria.put("state", Constant.BASE_STATE);
	}
	
	public AdminManager getAdminManager() {
		return adminManager;
	}

	public void setAdminManager(AdminManager adminManager) {
		this.adminManager = adminManager;
	}

}
