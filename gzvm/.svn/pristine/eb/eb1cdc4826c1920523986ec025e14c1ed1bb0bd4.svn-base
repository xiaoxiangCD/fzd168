.sub_type{
	height:50px;
	line-height:50px;
	border-bottom:solid 1px #ccc;
}
.name_panel{
	width:65%;
	padding-left:40px;
	cursor:pointer;
}
.tool_panel{
	text-align:right;
	width:33%;
	padding-right:20px;
}
.tool_panel img{
	margin-left:6px;
	width:20px;
	height:20px;
	vertical-align: sub;
	cursor:pointer;
}
.sub_nav_type{
	height:60px;
	line-height:60px;
	padding-left:20px;
	border-bottom:solid 1px #ccc;
}
.sub_nav_type p{
	font-size:18px;
}
.detail_panel{
	float:left;
	margin-left:20px;
	width:78%;
}
.detail_title{
	height:60px;
	line-height:60px;
	border-bottom:solid 1px #eee;
	margin-bottom:0px;
	position:relative;
	margin-left:0;
}
.detail_title p,.sub_type p{
	display:inline-block;
}
.detail_name{
	font-size:20px;
	padding:0 30px;
}
.detail_dsc{
	color:#ccc;
}
.list{
	bakground-color:#fff;
	border:solid 1px #eee;
}

/*璧涗簨绛涢�*/
.state_search{
	position:absolute;
	right:20px;
	top:13px;
}
.state_search select,.state_search input{
	float:left;
}
.search_input{
	display:inline-block;
	width:210px;
	height:34px;
}
.state_btn{
	width:100px;
	color:#fff;	
}
.ctrl_item{
	text-align:left;cursor:pointer;
}
.ctrl_item img,.Type_new img,.Type_name img{
	width:20px;height:20px;vertical-align: sub;
}

.ctrl_item a{
	color:#333;margin-left:2px;
}

.Type{
	height:60px;
	line-height:60px;
	border:solid 1px #eee;
	margin-bottom:20px;
	position:relative;
	margin-left:0;
}
.Type_name,.Type_new {
	display:inline-block;
	padding:0 20px;
}
.Type_name a{
	display:inline-block;
	font-size:20px;
	color:#000;
	margin-right:10px;
}
.Type_new,.Type_name img{
	cursor:pointer;
}
.Type_new a{
	color:#1b9dbd;
	font-size:16px;
	margin-left:5px;
}