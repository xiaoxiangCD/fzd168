
.search_panel{
	width:100%;
	background-color:#e4e4e4;
	border:solid 1px #ccc;
	padding:20px 30px;
	margin-bottom:20px;
}
.search_btn{
	color:#fff !important;
}
/* 璧涗簨鍒楄〃 */

#contents{
	overflow: hidden;
    margin-bottom: 30px;
}

.competition{
	margin:0 20px ;
}

.competition_list_panel{
	border: 1px solid #DDD;
    margin-top: 30px;
    padding: 0 10px;
}

.comptition_img{
	width:90%;
	margin: 15px auto;
	position: relative;
    height: 150px;
    
}
.comptition_img img{
	display:inline-block;
	width:100%;
	height:100%;
	position: absolute;
    z-index: 10000;
}

.sendImgPanel{
	width:100%;height:100%;background:rgba(0, 0, 0, 0.5);position:absolute;z-index: 10001;display:none;
}

.sendImgPanel p{
	width:100%;height:100%;color:#FFF;text-align:center;margin-top:70px;
}

.comptition_text{
	padding: 7px 18px;
    border-bottom: 1px solid #DDD
}

.competition_title{
	font-size:18px;
	margin:10px 0;
	padding: 0 0 0 16px;
    font-weight: bold;
}

.competition_title_item{
	font-size:15px;
	color:#666;
	margin-bottom:10px;
	line-height:20px;
	display:block;white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
}
.competition_edit{
	display:inline-block;
	width:49%;
	height:40px;
	border-right:1px solid #DDD;
	margin: 5px 0 0 0;
}
.competition_del{
	display:inline-block;
	width:49%;
	height:40px;
}
.competition_edit>.competition_icons{
	background:url("/gzvm/project/images/edit_panel.png") no-repeat center center;
	background-size:1.6em;
	display: block;
    height: 40px;
}

.competition_edit>.competition_icons:hover{
	background:url("/gzvm/project/images/edit_panel_hover.png") no-repeat center center;
	background-size:1.6em;
}

.competition_del>.competition_icons{
	background:url("/gzvm/project/images/del_panel.png") no-repeat center center;
	background-size:1.6em;
	display: block;
    height: 40px;
}

.competition_del>.competition_icons:hover{
	background:url("/gzvm/project/images/del_panel_hover.png") no-repeat center center;
	background-size:1.6em;
}

.competition_type p{
	display:inline-block;
	background-color:#333;
	padding:5px 20px;
	border-radius:2px;
	margin-right:10px;
	color:#fff;
	font-size:12px;
	margin:5px 0 ;
}
.competition_date p,.competition_adress p{
	display:inline-block;
	margin-right:10px;
	margin:5px 0;
}
.competition_date .date{
	color:#ff9966;
}
.competition_dsc{
	color:#ccc;
	margin:5px 0;
	line-height:18px;
}
.detail{
	margin:10px 0;
}

/* 鍒嗛〉 */
.page .M-box3{
	float:right;
	padding-right:20px;
}

